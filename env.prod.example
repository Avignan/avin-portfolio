# Django Production Environment Variables
DJANGO_ENV=production
DJANGO_SECRET_KEY=your-super-secret-production-key-here-generate-new-one

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_production_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# FastAPI Configuration (container-to-container communication)
FASTAPI_URL=http://fastapi:8001

# MongoDB Configuration (for FastAPI)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/portfolio?retryWrites=true&w=majority

# SendGrid Configuration (for FastAPI)
SENDGRID_API_KEY=your_production_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_TO=admin@yourdomain.com

# Redis Configuration (if using cache)
REDIS_URL=redis://redis:6379

# FastAPI Environment
FASTAPI_ENV=production

